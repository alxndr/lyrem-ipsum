<% content_for :head do -%>
  <link rel="canonical" href="/text-from-lyrics-by/<%= @artist.slug %>" />
<% end -%>

<% @title = "Lorem Ipsum text based on lyrics by #{@artist.display_name}" %>

<h1><%= @artist.display_name %> ipsum</h1>

<% @artist.lyrem(paragraphs: 5).each do |parag| -%>
  <p><%= parag %></p>
<% end -%>

